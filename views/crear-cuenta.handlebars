<main class="contenedor">
    <form action="/crear-cuenta" method="POST" class="default-form">
        <h3>Informacion Personal</h3>
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Tu nombre" value="" >
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Tu email" value="" >
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Tu password" value="" >
        </div>
        <div class="campo">
            <label for="confirmar">Confirmar Password</label>
            <input type="password" id="confirmar" name="confirmar" placeholder="Repite tu password" value="" >
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Volver a Iniciar Sesion</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear Cuenta" class="btn btn-azul">
        </div>
</main>