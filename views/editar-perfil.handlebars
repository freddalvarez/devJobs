<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label >Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre"  placeholder="Tu Nombre" >
        </div>
        <div class="campo">
            <label>Email</label>
            <input value={{usuario.email}} type="email" name="email" placeholder="Tu Email" >
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label >Imagen</label>
            <input type="file" id="imagen" name="imagen" placeholder="Tu imagen">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-editar" alt="imagen usuario">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-verde">
        </div>
    
    </form>
</main>